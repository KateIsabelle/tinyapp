<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if(user){ %>
      <form method="POST" class="form-inline" action="/logout">
        <div class="form-group mb-2">
          <label style="margin-right: 1em" for="logout" >Logged in as: <%= user.email  %></label>
          <input type="submit" value="Logout" name="logout" class="btn btn-outline-dark">
        </div>
      </form>
    <% } else{ %>  
      <form method="GET" action="/login" style="margin-right: 1em" class="form-inline">
        <div class="form-group mb-2">
          <input type="submit" value="Login" class="btn btn-success disabled">
        </div>
      </form>
      <form method="GET" action="/register" style="margin-right: 1em" class="form-inline">
        <div class="form-group mb-2">
          <input type="submit" value="Register" class="btn btn-success disabled">
        </div>
      </form>
  
   <% } %>
   
    
  </nav>
</header>